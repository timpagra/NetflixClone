{
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "prettier",
      "prettier/react"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": ["react", "react-hooks", "import", "prettier"],
  "rules": {
      "indent": ["warn", 2],
      "quotes": ["warn", "double"],
      "semi": ["error", "always"],
      "no-unused-vars": "warn",
      "object-shorthand": "off",
      "react-hooks/rules-of-hooks": "error"
  }
}